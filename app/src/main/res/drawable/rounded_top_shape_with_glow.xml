<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state (when tapped or clicked) -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#192841" />
            <corners
                android:topLeftRadius="1000dp"
                android:topRightRadius="1000dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
            <stroke
                android:width="5dp"
                android:color="#FFFFFF" /> <!-- White glow effect -->
        </shape>
    </item>

    <!-- Focused state (when selected) -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#192841" />
            <corners
                android:topLeftRadius="1000dp"
                android:topRightRadius="1000dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
            <stroke
                android:width="5dp"
                android:color="#FFFFFF" /> <!-- White glow effect -->
        </shape>
    </item>

    <!-- Default state (no glow) -->
    <item>
        <shape>
            <solid android:color="#192841" />
            <corners
                android:topLeftRadius="1000dp"
                android:topRightRadius="1000dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
        </shape>
    </item>
</selector>