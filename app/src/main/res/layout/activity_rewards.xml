<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rewards">

    <ImageView
        android:id="@+id/semi_circle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Semi-Circle Shape"
        android:src="@drawable/semi_circle_shape"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rewardsTitle" />

    <TextView
        android:id="@+id/rewardsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="27dp"
        android:text="Rewards"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/semi_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDailyGoals"
        android:layout_width="167dp"
        android:layout_height="125dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:text="Daily Goals"
        app:icon="@drawable/ic_levelup"
        app:iconGravity="textTop"
        app:iconSize="80dp"
        app:layout_constraintBottom_toTopOf="@+id/imageBelowButtons"
        app:layout_constraintEnd_toStartOf="@+id/btnLevelUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Image below buttons inside the semi-circle -->
    <Button
        android:id="@+id/btnLevelUp"
        android:layout_width="167dp"
        android:layout_height="126dp"
        android:layout_marginEnd="51dp"
        android:text="Level Up"
        app:icon="@drawable/ic_dailygoals"
        app:iconGravity="textTop"
        app:iconSize="80dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnDailyGoals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDailyGoals" />

    <ImageView
        android:id="@+id/imageBelowButtons"
        android:layout_width="388dp"
        android:layout_height="0dp"
        android:layout_marginBottom="19dp"
        android:contentDescription="Image below buttons"
        android:src="@drawable/rewards_page_logo"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toStartOf="@+id/btnLevelUp"
        app:layout_constraintStart_toStartOf="@+id/btnLevelUp"
        app:layout_constraintTop_toBottomOf="@+id/btnDailyGoals" />

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBelowButtons"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>

